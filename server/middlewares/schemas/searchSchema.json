{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Root Schema",
  "required": ["term", "location"],
  "properties": {
    "term": {
      "$id": "#/properties/term",
      "type": "string",
      "title": "The Term Schema",
      "default": "",
      "examples": ["Brunch"],
      "pattern": "^(.*)$"
    },
    "location": {
      "$id": "#/properties/location",
      "type": "string",
      "title": "The Location Schema",
      "default": "",
      "examples": ["Oakland"],
      "pattern": "^(.*)$"
    }
  }
}
